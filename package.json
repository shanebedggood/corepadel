{
  "name": "core-padel",
  "version": "1.0.0",
  "description": "Pace and Court",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd services && ./mvnw quarkus:dev",
    "dev:frontend": "cd web/web-app && npm start",
    "build": "cd web/web-app && npm run build",
    "build:prod": "cd web/web-app && npm run build:prod",
    "deploy": "npm run build:prod && firebase deploy --only hosting",
    "deploy:all": "npm run build:prod && firebase deploy",
    "setup": "chmod +x setup-dev.sh && ./setup-dev.sh"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": ["padel", "tournament", "firebase", "angular", "quarkus"],
  "author": "The Code Foundry",
  "license": "MIT"
}
