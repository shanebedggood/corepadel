{
  "auth": {
    "actionCodeSettings": {
      "url": "https://corepadelapp.web.app/auth/verify-email",
      "handleCodeInApp": true
    }
  },
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": {
    "public": "web/web-app/dist/browser",
    "headers": [
      {
        "source": "/index.html",
        "headers": [
          { "key": "Cache-Control", "value": "no-cache" }
        ]
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "run": {
          "serviceId": "corepadel-quarkus",
          "region": "us-central1"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
