{
  "auth": {
    "actionCodeSettings": {
      "url": "http://localhost:4201/auth/verify-email",
      "handleCodeInApp": true
    }
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 5000
    }
  },
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "web/web-app/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
